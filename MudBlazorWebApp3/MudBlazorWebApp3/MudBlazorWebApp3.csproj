<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<PublishDir>$(MSBuildProjectDirectory)/publish/</PublishDir>
		<!-- Define o destino da publicação -->
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\MudBlazorWebApp3.Client\MudBlazorWebApp3.Client.csproj" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="9.*" />
	</ItemGroup>

	<Target Name="CleanPublishFolder" BeforeTargets="Publish">
		<RemoveDir Directories="$(PublishDir)" />
	</Target>

</Project>


